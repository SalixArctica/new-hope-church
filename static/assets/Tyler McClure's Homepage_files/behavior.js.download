document.addEventListener("DOMContentLoaded", function(event) {
    var preClickText = document.getElementById("pre_click_text");
    
    var postClickText = document.getElementById("post_click_text");

    var thumbnailElement = document.getElementById("smart_thumbnail");
     
    thumbnailElement.addEventListener("click", function() {
	if (thumbnailElement.className == "small") {
	    thumbnailElement.className = "";
	    preClickText.className = "invisible";
	    postClickText.className = "visible";
	} else {
	    thumbnailElement.className = "small";
	    preClickText.className = "visible";
	    postClickText.className = "invisible";


	}
    });

    



});
